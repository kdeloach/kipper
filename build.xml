<project default="run">
    <target name="run" depends="build, exec">
    </target>
    <target name="clean">
        <delete dir="bin" quiet="true" />
        <mkdir dir="bin" />
    </target>
    <target name="build">
        <javac srcdir="src" destdir="bin" debug="true" includeAntRuntime="false" />
        <copy todir="bin/assets">
            <fileset dir="src/assets"/>
        </copy>
    </target>
    <target name="exec">
        <java classpath="bin" classname="kipper.Execute" fork="true" />
    </target>
    <target name="masktool">
        <java classpath="bin" classname="MaskMachine" fork="true" />
    </target>
</project>
